<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.oscatest.mapper.CompanyMapper">

<!--  회사 등록  -->
    <insert id="insert">
        insert into tbl_company(comId, comName)
        values (#{comId},#{comName});

    </insert>

<!--  비밀번호 찾기  -->


<!--  회사 정보 출력  -->
    <select id="info" resultType="Company">
        select * from tbl_company where comId=#{comId}
    </select>


<!-- 정보 수정  -->
    <update id="update">
        update tbl_company set comName = #{comName} where comId = #{comId}
    </update>


<!--  회사 탈퇴(서비스 탈퇴)  -->
    <delete id="delete">
        delete from tbl_company where comId = #{comId};
    </delete>

